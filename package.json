{
  "name": "client",
  "version": "1.5.7",
  "main": "public/electron.js",
  "homepage": "./",
  "files": [
    "**/*",
    "build/*"
  ],
  "dependencies": {
    "auto-launch": "^5.0.5",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.8",
    "electron-updater": "^4.1.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Clonex/POS-terminal.git"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "electron-build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "build": "yarn react-build && yarn deploy",
    "start": "concurrently \"npx cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "electron": "^7.0.0",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
